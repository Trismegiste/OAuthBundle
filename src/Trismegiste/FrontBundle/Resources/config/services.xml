<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="oauth.provider.factory" class="Trismegiste\FrontBundle\Oauth\ProviderFactory">
            <argument type="service" id="router"/>
            <argument type="service" id="form.csrf_provider"/>
        </service>
        
        <service id="oauth.security.authentication.provider"
                 class="Trismegiste\FrontBundle\Security\OauthProvider" public="false">
            <argument /> <!-- User Provider -->
        </service>

        <service id="oauth.security.authentication.listener"
                 class="Trismegiste\FrontBundle\Security\OauthListener" 
                 public="false" abstract="true"
                 parent="security.authentication.listener.abstract" >
            <argument type="service" id="oauth.provider.factory"/>
        </service>
        
        <service id="social.user.provider" class="Trismegiste\FrontBundle\Security\OauthUserProvider"/>
        
    </services>

</container>
